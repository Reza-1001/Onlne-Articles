<!-- Modal -->
<div class="modal fade text-right" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">ثبت نام</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body w-75 mx-auto row flex-column flex-center text-right">
          <label class="mt-2" for="firstName">نام</label>
          <input class= "border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="firstName">
          <label class="mt-2" for="lastName">نام خانوادگی</label>
          <input class= "border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="lastName">
          <label class="mt-2" for="userName">نام کاربری</label>
          <input class= "border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="userName">
          <label class="mt-2" for="password">رمز عبور</label>
          <input class= "border-left-0 border-right-0 border-top-0 border-bottom-1" type="password" name="password">
          <label class="mt-2" for="password-reapet">تکرار رمز عبور</label>
          <input class= "border-left-0 border-right-0 border-top-0 border-bottom-1" type="password" name="password-reapet">
          <label class="mt-2" for="gender">جنسیت</label>
          <select class= "border-left-0 border-right-0 border-top-0 border-bottom-1" name="gender">
          <option class= "" value="Female">زن</option>
          <option class= "" value="Male">مرد</option>
        </select>
          <label class="mt-2" for="phoneNumber">شماره موبایل</label>
          <input class= "border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="phoneNumber">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
          <button type="button" class="btn btn-primary">ثبت نام</button>
        </div>
      </div>
    </div>
  </div>
</body>

</html>