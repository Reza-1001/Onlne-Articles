<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
    <script src="https://kit.fontawesome.com/3ebeec4ad6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
</head>

<body class="bg-color">
  <nav class="navbar w-75 mx-auto mt-3 px-5 bg-light rounded shadow-lg">
    <a href="/">
      <i class="fas fa-home fa-2x"></i>
      خانه
    </a>

    <div class="navbar-account m-5 row">
      <a href=></a><i class="fas fa-search fa-2x ml-1"></i>
      <a id="login-review-mobile" class="d-flex align-items-center d-lg-none" href="/api/auth/account-login" aria-label="Login"><i class="far fa-user fa-2x" aria-hidden="true"></i></a>
      <a id="login-review" class="d-none d-lg-inline-block btn btn-primary btn-sm" href="/api/auth/account-login"
        title="ورود یا عضویت در سایت"><i class="fas fa-user ml-3"></i>ورود/عضویت</a>
    </div>


  </nav>
  <!-- Register Modal -->
  <div class="modal fade text-right" id="register_modal" tabindex="-1" role="dialog"
    aria-labelledby="register_modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="register_modalLabel">ثبت نام</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/api/auth/register" method="POST">
          <div class="modal-body w-75 mx-auto row flex-column flex-center text-right">
            <label class="mt-2" for="firstName">نام</label>
            <input class="border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="firstName">
            <label class="mt-2" for="lastName">نام خانوادگی</label>
            <input class="border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="lastName">
            <label class="mt-2" for="userName">نام کاربری</label>
            <input class="border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="userName">
            <label class="mt-2" for="password">رمز عبور</label>
            <input class="border-left-0 border-right-0 border-top-0 border-bottom-1" type="password" name="password">
            <label class="mt-2" for="password-reapet">تکرار رمز عبور</label>
            <input class="border-left-0 border-right-0 border-top-0 border-bottom-1" type="password"
              id="password-reapet">
            <label class="mt-2" for="gender">جنسیت</label>
            <select class="border-left-0 border-right-0 border-top-0 border-bottom-1" name="gender">
              <option class="" value="Female">زن</option>
              <option class="" value="Male">مرد</option>
            </select>
            <label class="mt-2" for="phoneNumber">شماره موبایل</label>
            <input class="border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="phoneNumber">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-primary">ثبت نام</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Login Modal -->
  <div class="modal fade text-right" id="login_modal" tabindex="-1" role="dialog" aria-labelledby="login_modalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header ">
          <h5 class="modal-title" id="login_modalLabel">ورود</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/api/auth/login" method="POST">
          <div class="modal-body w-75 mx-auto row flex-column flex-center text-right">
            <label class="mt-2" for="userName">نام کاربری</label>
            <input class="border-left-0 border-right-0 border-top-0 border-bottom-1" type="text" name="userName">
            <label class="mt-2" for="password">رمز عبور</label>
            <input class="border-left-0 border-right-0 border-top-0 border-bottom-1" type="password" name="password">
          </div>
          <div class="modal-footer">

            <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-primary">ورود</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>

</html>