<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <script src="/plugins/tinymce/tinymce.js" referrerpolicy="origin"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script defer src="/javascripts/newArticle.js"></script>
    <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/profile_info.css">

    <script>
        tinymce.init({
            selector: '#mytextarea',
            height: 500,
            width: "90%",
            plugins: 'print preview searchreplace autolink directionality visualblocks visualchars image link table charmap hr pagebreak nonbreaking anchor toc insertdatetime advlist lists textcolor wordcount imagetools contextmenu colorpicker textpattern help',
            toolbar1: 'formatselect | bold italic strikethrough forecolor backcolor | link | alignleft aligncenter alignright alignjustify  | numlist bullist outdent indent  | removeformat',

        });
    </script>
</head>

<body class="bg-image">

 

    <!-- editor -->
    <div class="container bg-light opacity">
        <div class="row justify-content-center " style="height:100%" >
            <div class="col-12 col-lg-10 col-xl-12 mx-auto" >
                <div class="my-4 h-90" >
                    <form id="save-article" method="post" action="/api/article/new" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                <label for="title">Title</label>
                                <input type="text" id="title" class="form-control" name="title" required />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                <label for="category">Category</label>
                                <input type="text" class="form-control" id="category" name="category" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea id="mytextarea" class="form-control" rows="5" name="mytext" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="article-avatar" class="text-black">Upload image</label>
                            <input type="file" name="article" id="article-avatar" class="form-control-file text-white">
                        </div>
                        <div class="form-group d-none">
                            <input type="text" class="form-control" id="snippet" name="snippet" required />
                            
                        </div>
                        <button id="save-info" type="submit" class="btn btn-primary mt-2" onclick="saveArticle();">Save</button>
                        <a href="/api/dashboard" id="cancel-info"  class="btn btn-primary mt-2">Cancel</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /editor -->
</body>
</html>