<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/all_articles.css">
    <script defer src="/javascripts/newArticle.js"></script>
</head>
<body>
    <div class="container mt-5">
        <div class="row mb-3">
            <a href="/api/dashboard" class="btn btn-success d-flex align-items-center">
                <i class="material-icons mr-2">add_circle</i>
                Go to Dashboard</a>
        </div>

    <div class="row">
        <% if(articles.length<1){%>
        <p class="text-white">No article yet, create a new one</p>
        <%  } %>
        <% articles.forEach(article=>{ %>
        <div class="col-lg-6 card mt-2 mr-0">
            <div class="row p-2">
                <div class="col-5 overflow-hidden">
                    <img src="/assets/images/article.jpg" class="card-img" alt="...">
                </div>
                <div class="col-7">
                    <div class="d-flex align-items-start">
                        <h5 class="w-100"><b> <%= article.title %> </b></h5>
                        <!-- display more button -->
                        <div class="more position-relative" style="cursor: pointer;">
                            <i class="material-icons p-2">more_vert</i>
                            <!-- options list -->
                            <div class="d-none options card rounded-pill shadow-sm p-1 position-absolute">
                                <a href="blogs/edit/<%= articles._id %> " class="rounded-circle p-2 mb-2"
                                    style="background:blue;">
                                    <i class="material-icons" style="color:white">create</i>
                                </a>
                                <form action="/api/article/<%=article.id%>?_method=DELETE" method="POST">
                                    <button class="rounded-circle p-2 bg-danger">
                                        <i class="material-icons" style="color:white">delete</i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <span class="align-self-stretch "><%= article.content %>
                    </span>
                    <div class="d-flex align-items-end">
                        <div class="mr-2">
                            <% let avatar=article.writer.profileImage %>
                            <% if (!article.writer.profileImage){ %>
                            <% avatar="default-avatar.jpg" %>
                            <% } %>
                            <img src="/images/avatar/<%= avatar %>" class="rounded-circle"
                                style="width: 80px; height: 80px;">
                        </div>
                        <div class=" flex-grow-1">
                            <h5 class="" style="font-size: 14px; line-height: 0.5rem;">
                                <span><b><%= article.writer.firstName + " " + article.writer.lastName%></b></span></h5>
                            <p style="font-size: 12px; line-height: 0.2rem;">
                                <%= article.createdAt.toLocaleDateString() %></p>
                        </div>
                        <a href="api/article/<%=article._id %> " class=" align-self-end">
                            <i class='material-icons ml-3 text-black'>send</i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</body>
</html>