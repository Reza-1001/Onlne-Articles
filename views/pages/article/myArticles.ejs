<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Articles</title>
    <!-- Jquery -->
    <script src="/javascripts/jquery-3.6.0.js"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">

    <script src="/javascripts/bootstrap.bundle.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/all_articles.css">

    <!-- JS -->
    <script src="/javascripts/newArticle.js"></script>

</head>

<body>
    <div class="container mt-5">
        <div class="row mb-3">
            <a href="/dashboard" class="btn btn-success d-flex align-items-center">

                Go to Dashboard</a>
        </div>

        <div class="row">
            <% if(articles.length<1){%>
            <p class="text-white">No article yet, create a new one</p>
            <%  } %>
            <% articles.forEach(article=>{ %>
            <div class="mt-3 col-12 col-md-6 col-lg-6">
                <div class="card">

                    <!-- store article id in span -->
                    <!-- <span id="article" hidden>
                        <%= JSON.stringify(article._id); %>
                    </span> -->

                    <img style="height:300px" class="card-img-top" src="/images/article/<%=article.avatar%>"
                        alt="Card image cap" />
                    <div class="card-body">
                        <h5 class="card-title"><%- article.title %></h5>
                        <p class="card-text">
                            <%- article.snippet %>
                        </p>
                    </div>
                    <div class="card-footer d-flex align-items-end">
                        <div class="writer-avatar">
                            <% let avatar=article.writer.profileImage %>
                            <% if (!article.writer.profileImage){ %>
                            <% avatar="default-avatar.jpg" %>
                            <% } %>
                            <img class="rounded-circle" src="/images/avatar/<%= avatar %>"
                                style="width: 80px; height:80px;" />
                        </div>
                        <div class="writer-info ml-3">
                            <p style="line-height: 0.2rem;">
                                <%- article.writer.firstName +" " + article.writer.lastName%></p>
                            <p> <%- article.createdAt.toLocaleDateString() %></p>
                        </div>
                        <div class="read-more d-flex align-items-center">
                            <a href="/article/<%- article._id%>" class="btn btn-primary ml-4">Read more</a>
                            <a href="/article/edit/<%- article._id%>" class="btn btn-primary ml-4">Edit Article</a>
                            <a id="<%= article._id %>" href="#" class="btn btn-primary ml-4"
                                onclick="deleteArticle(this);">Delete Article</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
</body>

</html>