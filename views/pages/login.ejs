<!DOCTYPE html>
<html>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login</title>
	<!-- Google Fonts Poppins -->
	<link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">

	<!-- Font Awesome -->
	<script src="https://kit.fontawesome.com/a81368914c.js"></script>

	<!-- Jquery -->
	<script src="/javascripts/jquery-3.6.0.js"></script>

	<!-- Bootstrap -->
	<link rel="stylesheet" href="/stylesheets/bootstrap.css">

	<script src="/javascripts/bootstrap.bundle.js"></script>


	<!-- Swal -->
	<script src="/plugins/sweetalert2/sweetalert2.min.js"></script>
	<link rel="stylesheet" type="text/css" href="/plugins/sweetalert2/sweetalert2.min.css">


	<!-- CSS -->
	<link rel="stylesheet" type="text/css" href="/stylesheets/login-register.css">



</head>

<body>

	<div class="back-home">
		<a href="/">
			Back Home
			<i class="fas fa-chevron-right"></i>
		</a>
	</div>
	<div class="container">
		<div class="img">
			<img src="/assets/svg/login_bg.svg">
		</div>

		<div class="login-content">
			<form id="login-form" class="login-form" method="post" action="/login">
				<img src="/assets/svg/login_avatar.svg">
				<h2>Welcome</h2>
				<div class="input-div one">
					<div class="i">
						<i class="fas fa-user"></i>
					</div>
					<div class="div">
						<h5>Username</h5>
						<input id="user-name" type="text" class="input empty" name="userName">
					</div>
				</div>
				<div class="input-div pass">
					<div class="i">
						<i class="fas fa-lock"></i>
					</div>
					<div class="div">
						<h5>Password</h5>
						<input id="password" type="password" class="input" name="password">
					</div>
				</div>

				<a href="#" data-toggle="modal" data-target="#reset-pass-modal">Forget Password?</a>
				<br>

				<input id="submit-btn" type="button" class="btn btn-primary" value="Login">
				<% if (error) { %>
				<p> <%= error %></p>
				<% } %>

				<h6>Don't Have Account? </h6> <a style="display:flex;justify-content:center;" href="/register"> Register
					Now</a>
			</form>
		</div>

		<!-- Modal -->
		<div class="modal fade" id="reset-pass-modal" role="dialog">
			<div class="modal-dialog">

				<!-- Modal content-->
				<div class="modal-content">
					<div class="bg-white text-center p-5 mt-3 center">
						<img src="/assets/svg/Forgot_password.svg">
						<h3>Forgot Password!?!?</h3>
						<p>Please fill in the form to reset your password</p>
						<form id="reset-pass" class="pb-3" action="#">
							<div class="form-group">
								<input type="text" name="userName" class="form-control" placeholder="Your Username*"
									required>
							</div>
							<div class="form-group">
								<input type="text" name="firstName" class="form-control" placeholder="Your firstname*"
									required>
							</div>
							<div class="form-group">
								<input type="text" name="lastName" class="form-control" placeholder="Your lastname*"
									required>
							</div>
							<input id="reset-btn" type="button" class="btn btn-primary" value="Reset Password">
						</form>
					</div>
					<div class="modal-footer">
						<p>Not a member? <a href="/register">Register</a></p>
					</div>
				</div>

			</div>
		</div>

	</div>
	<script type="text/javascript" src="/javascripts/login.js"></script>
</body>

</html>